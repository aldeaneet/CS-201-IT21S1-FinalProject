package RetailStore;

import java.util.HashMap;
import java.util.Map;

public class ProductCatalog {
    private HashMap<String, Product> catalog = new HashMap<>();

    public void addProduct(Product product) {
        catalog.put(product.getProductId(), product);
        System.out.println("Product added: " + product.getName());
    }

    public void removeProduct(String productId) {
        if (catalog.containsKey(productId)) {
            catalog.remove(productId);
            System.out.println("Product removed: " + productId);
        } else {
            System.out.println("Product not found: " + productId);
        }
    }

    public void updateProduct(String productId, Product updatedProduct) {
        if (catalog.containsKey(productId)) {
            catalog.put(productId, updatedProduct);
            System.out.println("Product updated: " + updatedProduct.getName());
        } else {
            System.out.println("Product not found: " + productId);
        }
    }

    public Product getProduct(String productId) {
        return catalog.get(productId);
    }

    public Map<String, Product> getCatalog() {
        return catalog;
    }

    public void displayProducts() {
        if (catalog.isEmpty()) {
            System.out.println("No products available in the catalog.");
        } else {
            for (Product product : catalog.values()) {
                System.out.println(product);
                System.out.println("------------");
            }
        }
    }
}
